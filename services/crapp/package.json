    "----- // SSR // -----": "",
    "clean:build:app": "rm -rf build",
    "clean:build:src": "rm -rf ./build-src",
    "clean:build:ssr": "rm -rf ./build-ssr",
    "clean:build": "npm run clean:build:app && npm run clean:build:src && npm run clean:build:ssr",
    "build:ssr:src": "NODE_ENV=production BABEL_ENV=node ./node_modules/.bin/babel src --out-dir ./build-src --copy-files",
    "build:ssr:ssr": "NODE_ENV=production BABEL_ENV=node ./node_modules/.bin/babel ssr --out-dir ./build-ssr",
    "build:ssr": "npm run build:ssr:src && npm run build:ssr:ssr",
    "build:all": "npm run clean:build && yarn build && npm run build:ssr",
    "start:api": "NODE_ENV=production SSR=true node index",
    "start:dev:api": "NODE_ENV=development BABEL_ENV=node SSR=true nodemon index-dev",
    "----- // STYLEGUIRE // -----": "",
    "styleguide": "./node_modules/.bin/styleguidist server",
    "styleguide:build": "./node_modules/.bin/styleguidist build"
  },
  "eslintConfig": {
    "extends": "react-app"
